/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@components/*": [ "src/app/components/*" ],
      "@interfaces": [ "src/app/interfaces/index.ts" ],
      "@constants": [ "src/app/constants/index.ts" ],
      "@enums": [ "src/app/enums/index.ts" ],
      "@services": [ "src/app/services/index.ts" ],
    },
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "module": "es2020",
    "lib": [
      "es2018",
      "dom"
    ]
  }
}
