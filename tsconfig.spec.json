/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./out-tsc/spec",
    "types": [
      "jasmine"
    ],
    "paths": {
      "@components/*": [ "src/app/components/*" ],
      "@interfaces": [ "src/app/interfaces/index.ts" ],
      "@constants": [ "src/app/constants/index.ts" ],
      "@enums": [ "src/app/enums/index.ts" ],
      "@services": [ "src/app/services/index.ts" ],
    },
  },
  "files": [
    "src/test.ts",
    "src/polyfills.ts"
  ],
  "include": [
    "src/**/*.spec.ts",
    "src/**/*.d.ts"
  ]
}
